<%= form_for page, url: url do |f| %>

	<% if page.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(page.errors.count, "error") %>:
			</h2>
			<ul>
				<% page.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>
